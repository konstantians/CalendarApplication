        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-dark text-center text-white font-weight-bold pt-2 pb-2 mr-3" asp-controller="Home" asp-action="HomePage">Back To Home</a>
            <button type="submit" class="btn btn-primary text-center text-white font-weight-bold pt-2 pb-2" onclick="EnableAll()">Save Changes</button>
        </div>
    </div>
</form>

<script type="text/javascript">
    function EnableDisableTextBox(textboxId) {
        textboxId = String(textboxId)
        var textBox = document.getElementById(textboxId);
        if (textBox.disabled) {
            textBox.removeAttribute("disabled");
        } else {
            textBox.setAttribute("disabled", "disabled");
        }
    }
</script>

<script type="text/javascript">
    function EnableAll() {
        document.getElementById("username").removeAttribute("disabled");
        document.getElementById("fullname").removeAttribute("disabled");
        document.getElementById("dateOfBirth").removeAttribute("disabled");
        document.getElementById("phone").removeAttribute("disabled");
        document.getElementById("email").removeAttribute("disabled");
    
        let passwordInput = document.getElementById("password");
        passwordInput.removeAttribute("disabled");
        if(passwordInput.value === ""){
            passwordInput.value = "@ActiveUsers.User.Username";
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
