@model User

@{
    ViewData["Title"] = "View Notifications";
}

<h1 class="h1 pb-3 text-center">Account Notifications</h1>
<div class="row">
    <div class="col-12 col-md-6">
        <h2 class="h2 text-center">User Invitations</h2>
        @foreach (Event userEvent in Model.EventsThatTheUserParticipates)
        {
            //
        }
    </div>
    <div class="col-12 col-md-6">
        <h2 class="h2 text-center">User Events Notifications</h2>
        @foreach (Event userEvent in Model.EventsThatTheUserParticipates)
        {
            if (userEvent.AlertStatus && (userEvent.StartingTime.AddHours(-1) < DateTime.Now && DateTime.Now < userEvent.EndingTime))
            {
                <div class="notification-box">
                    <div class="notification-content">
                        <p class="notification-title">The Event @userEvent.Title will start in 1 hour</p>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary notification-btn notification-check-btn">
                            <i class="fa-solid fa-check"></i>
                        </button>
                        <button type="button" class="btn btn-danger notification-btn notification-close-btn">
                            <i class="fa-solid fa-x"></i>
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .notification-box {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 10px;
        margin-bottom: 5px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .notification-content {
        flex: 1;
        margin-right: 10px;
    }

    .notification-title {
        margin: 0;
    }

    .notification-btn {
        border: none;
        background: none;
        cursor: pointer;
    }

    .notification-check-btn {
        color: blue;
    }

    .notification-close-btn {
        color: red;
    }
    
</style>
