        function captureAndSaveTableScreenshot() {
            const div = document.getElementById('desktopTableContainer');

            // Use html2canvas to capture the table as an image
            html2canvas(div).then(canvas => {
                const screenshotDataUrl = canvas.toDataURL('image/png');

                // Convert data URL to Blob
                const screenshotBlob = dataURLtoBlob(screenshotDataUrl);

                // Create FormData object
                const formData = new FormData();
                formData.append('screenshot', screenshotBlob, 'screenshot.png');
                formData.append('calendarId', @Model.Id);

                // Send the FormData to the server as a POST request
                fetch('/Home/SaveScreenshot', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        if (response.ok) {
                            console.log('Screenshot saved successfully.');
                        } else {
                            console.error('Failed to save screenshot.');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            });
        }

        // Convert data URL to Blob
        //magic I do not really understand what is happening here
        function dataURLtoBlob(dataURL) {
            const arr = dataURL.split(',');
            const mime = arr[0].match(/:(.*?);/)[1];
            const bstr = atob(arr[1]);
            let n = bstr.length;
            const u8arr = new Uint8Array(n);
            while (n--) {
                u8arr[n] = bstr.charCodeAt(n);
            }
            return new Blob([u8arr], { type: mime });
        }
