<style>
    .table-bordered td {
        position: relative;
    }

    .calendar-event {
        position: absolute;
        z-index: 1;
        box-shadow: 0 0 3px black;
    }

    .native{
        background-color: #3466aa;
    }

    .foreign {
        background-color: #5534aa;
    }

    .event-top {
        top: 20%;
        left: 10%;
        right: 10%;
        bottom: 0;
        box-shadow: 0 0 3px black;
    }

    .event-top::after {
        content: "";
        position: absolute;
        bottom: -1px;
        left: 0px;
        right: 0px;
        height: 2px;
        z-index: 2;
        background-color: inherit;
    }

    .event-middle {
        top: 0;
        left: 10%;
        right: 10%;
        bottom: 0;
    }

    .event-middle::after {
        content: "";
        position: absolute;
        bottom: -1px;
        top: -1px;
        left: 0px;
        right: 0px;
        height: 2px;
        z-index: 2;
        background-color: inherit;
    }

    .event-bottom {
        top: 0;
        left: 10%;
        right: 10%;
        bottom: 20%;
    }

    .event-bottom::after {
        content: "";
        position: absolute;
        top: -1px;
        left: 0px;
        right: 0px;
        height: 2px;
        z-index: 2;
            background-color: inherit;
    }

    .event-inside {
        position: relative;
        z-index: 2;
    }

    /* Define a custom class for smaller buttons */
    .custom-btn-sm {
        padding: 0.2rem 0.4rem; /* Adjust padding as needed */
        font-size: 12px; /* Adjust font size as needed */
