@model Calendar

@{
    ViewData["Title"] = "Calendar Day Events";
    int hourCount = 0;
    bool doNotGoUp = true;
    int minCount = 0;
    int classCount = 0;
    Dictionary<int, int> teams = new Dictionary<int, int>();

    string dayName = new DateTime((int)ViewData["Year"], (int)ViewData["Month"], (int)ViewData["Day"]).DayOfWeek.ToString();
}

<style>
    .table-bordered td {
        position: relative;
    }

    .calendar-event {
        position: absolute;
        background-color: #3466aa;
        z-index: 1;
        box-shadow: 0 0 3px black;
    }

    .event-top {
        top: 20%;
        left: 10%;
        right: 10%;
        bottom: 0;
        box-shadow: 0 0 3px black;
    }

        .event-top::after {
            content: "";
            position: absolute;
            bottom: -1px;
            left: 0px;
            right: 0px;
            height: 2px;
            z-index: 2;
            background-color: #3466aa;
        }

    .event-middle {
        top: 0;
        left: 10%;
        right: 10%;
        bottom: 0;
    }

        .event-middle::after {
            content: "";
            position: absolute;
            bottom: -1px;
            top: -1px;
            left: 0px;
            right: 0px;
            height: 2px;
            z-index: 2;
            background-color: #3466aa;
        }

    .event-bottom {
        top: 0;
        left: 10%;
        right: 10%;
        bottom: 20%;
    }

        .event-bottom::after {
            content: "";
            position: absolute;
            top: -1px;
            left: 0px;
            right: 0px;
            height: 2px;
            z-index: 2;
            background-color: #3466aa;
        }

    .event-inside {
        position: relative;
        z-index: 2;
    }
</style>

