<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calendar App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

    <style>
        .dropdown-toggle::after {
            content: none;
        }

        .custom-dropdown-menu {
            border-width: 3px;
        }
    </style>
</head>
<body>
    <div style="min-height: 100vh;">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-2 fixed-top" style="background:#181A15;">
                <div class="container">
                    @*Todo fix probably one for mobile*@
                    <a class="navbar-brand" asp-area="" asp-controller="Home"
                       asp-action="HomePage" asp-route-pagination="1"><img src="~/images/LogoNavbar.png" width="150" height="40" style="border-radius:3%;border:solid 2px white;"
                       alt="Logo Image"/></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item mr-2">
                                <a class="nav-link text-light" asp-controller="Home"
                                   asp-action="HomePage" asp-route-pagination="1">Home</a>
                            </li>
                            <li class="nav-item mr-2">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="AddCalendar">Add Calendar</a>
                            </li>
                            <li class="nav-item">
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img src="~/images/transparentProfilePicture.png" width="33" height="28" alt="User Avatar" class="user-avatar">
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right custom-dropdown-menu border-primary" aria-labelledby="userDropdown">
                                        <strong class="dropdown-item" style="font-weight:bold;"><i class="fa-solid fa-user mr-2"></i>@ActiveUsers.User.Username</strong>
                                        <div class="dropdown-divider"></div>
                                        @if (ActiveUsers.HasNotifications)
                                        {
                                            <a class="dropdown-item" asp-controller="Home" asp-action="ViewNotifications"><i class="fa-regular fa-bell mr-2"></i>Notifications*</a>
                                        }
                                        else
                                        {
                                            <a class="dropdown-item" asp-controller="Home" asp-action="ViewNotifications"><i class="fa-regular fa-bell mr-2"></i>Notifications</a>
                                        }
                                        <a class="dropdown-item" asp-controller="Home" asp-action="EditAccount"><i class="fa-solid fa-table mr-2"></i>Account</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-controller="Authentication" asp-action="LogOut"><i class="fa-solid fa-right-from-bracket mr-2"></i>Log Out</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container" style="margin-top:80px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    @*#383A38*@
    <footer class="text-light pt-2 pb-3 mt-3 mb-0 border-top" style="background:#181A15;">
        <div class="container">
            <div class="row mt-2">
                <!-- Useful Links -->
                <div class="col-md-3">
                    <h5 class="mb-3">Site Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a class="footer-link" asp-controller="Home" asp-action="HomePage" asp-route-pagination="1"><i class="fa-solid fa-house mr-2"></i>HomePage</a></li>
                        @if (ActiveUsers.HasNotifications)
                        {
                            <li class="mb-2"> <a class="footer-link" asp-controller="Home" asp-action="ViewNotifications"><i class="fa-regular fa-bell mr-2"></i>Notifications*</a></li>
                        }
                        else
                        {
                            <li class="mb-2"><a class="footer-link" asp-controller="Home" asp-action="ViewNotifications"><i class="fa-regular fa-bell mr-2"></i>Notifications</a></li>
                        }

                        <li class="mb-2"><a class="footer-link" asp-controller="Home" asp-action="EditAccount"><i class="fa-solid fa-table mr-2"></i>Account</a></li>
                        <li class="mb-2"><a class="footer-link" asp-controller="Home" asp-action="AddCalendar"><i class="fa-regular fa-calendar-plus mr-2"></i>Add Calendar</a></li>
                        <li class="mb-2"><a class="footer-link" asp-controller="Authentication" asp-action="LogOut"><i class="fa-solid fa-right-from-bracket mr-2"></i>Log Out</a></li>
                    </ul>
                </div>
                <!-- Contact Information -->
                <div class="col-md-5">
                    <h5 class="mb-3">Contact Information</h5>
                    <div>
                        <h6><i class="fa-regular fa-user mr-2"></i>Konstantinos Kinnas Lead Developer</h6>
                        <ul class="list-unstyled">
                            <li><a class="footer-link" href="mailto:kinnaskonstantinos0@gmail.com"><i class="fa-regular fa-envelope mr-2"></i>kinnaskonstantinos0@gmail.com</a></li>
                            <li><a class="footer-link" href="tel:+306943655624"><i class="fa-solid fa-phone mr-2"></i>6943655624</a></li>
                        </ul>
                    </div>

                    <div>
                        <h6><i class="fa-regular fa-user mr-2"></i>Ilias Ligatos Junior Developer</h6>
                        <ul class="list-unstyled">
                            <li><a class="footer-link" href="mailto:ililig@hotmail.com"><i class="fa-regular fa-envelope mr-2"></i>ililig@hotmail.com</a></li>
                            <li><a class="footer-link" href="tel:+306977769765"><i class="fa-solid fa-phone mr-2"></i>6977769765</a></li>
                        </ul>
                    </div>
                  
                    <div class="mb-2 mb-sm-2">
                        <h5 class="mb-3">Our Socials</h5>
                        <div class="social-icons">
                            <a href="https://m.me/konstantinos.kinnas" class="btn btn-primary mr-3"><i class="fab fa-facebook-messenger"></i></a>
                            <a href="https://wa.me/306943655624" class="btn btn-primary mr-3"><i class="fab fa-whatsapp"></i></a>
                            <a href="viber://chat?number=306943655624" class="btn btn-primary mr-3"><i class="fab fa-viber"></i></a>
                            <a href="https://www.instagram.com/konstantinoskinnas55/" class="btn btn-primary"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                    
                </div>
                <!-- Contact Form -->
                <div class="col-md-4">
                    <h5 class="mb-3">Contact Us</h5>
                    <form asp-controller="Services" asp-action="ContactFormSubmission" method="post">
                        <div class="mb-3">
                            <label for="messageTitle" class="form-label">Message Title</label>
                            <input type="text" class="form-control" id="messageTitle" name="messageTitle" required>
                        </div>
                        <div class="mb-3">
                            <label for="messageContent" class="form-label">Message</label>
                            <textarea class="form-control" id="messageContent" name="messageContent" rows="3" required></textarea>
                        </div>
                        <input type="hidden" name="emailSender" value="@ActiveUsers.User.Email"/>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
